            <div style="display: flex;">
              <input type="checkbox" id="rememberMe" name="rememberMe" >
              <p style="margin-left: 10px;">I agree to Terms of Service, Privacy Policy and Content Policies</p>
            </div>
            <button type="submit" class="submit-btn" style="margin-top: 15px">Create Account</button>
          </form>
          <center>
            <p style="margin-top: 15px">Already have an account? <a class="link" href="/login">Log in</a></p>
          </center>
        </div>
      </div>
    </div>

